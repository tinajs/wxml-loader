{
  "name": "@tinajs/wxml-loader",
  "description": "wxml loader for webpack 4",
  "version": "0.3.1-fork.1",
  "main": "lib/index",
  "files": [
    "*.md",
    "bin",
    "lib"
  ],
  "scripts": {
    "start": "jest test --watch",
    "test": "jest test --coverage",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "prettier": "prettier-eslint --write \"+(src|test)/**/*.js\"",
    "prebuild": "rimraf lib",
    "build:watch": "babel src -d lib -w",
    "build": "babel src -d lib",
    "preversion": "yarn test && yarn build"
  },
  "author": "cap32",
  "repository": "tinajs/wxml-loader",
  "keywords": [
    "wxml",
    "loader",
    "webpack",
    "wxapp",
    "weapp",
    "mini-program",
    "wechat",
    "alipay"
  ],
  "license": "MIT",
  "dependencies": {
    "html-minifier": "^4.0.0",
    "loader-utils": "^1.2.3",
    "sax": "^1.2.4"
  },
  "devDependencies": {
    "babel-cli": "^7.0.0-beta.3",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.7.1",
    "babel-plugin-transform-es2015-destructuring": "^7.0.0-beta.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-es2015-parameters": "^7.0.0-beta.3",
    "babel-polyfill": "^7.0.0-beta.3",
    "babel-preset-stage-0": "^7.0.0-beta.3",
    "babel-register": "^7.0.0-beta.3",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-cantonjs": "^2.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "extract-loader": "^3.1.0",
    "file-loader": "^3.0.1",
    "jest": "^24.7.1",
    "mkdirp": "^0.5.1",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.3",
    "webpack": "^4.29.6",
    "webpack-chain": "^5.2.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "modulePathIgnorePatterns": [
      "node_modules",
      "lib",
      "dist"
    ]
  }
}
